const texts = [
    "bÄ™dzie mi bardzo smutno ğŸ˜¢",
	"NO ZGÃ“DÅ¹ SIÄ˜ğŸ¤¬ğŸ¤¬",
	"czemu dalej klikasz NIEğŸ˜©ğŸ˜©",
	"serce mi pÄ™ka ğŸ’”",
